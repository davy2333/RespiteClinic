
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
@{
    ViewBag.Title = "Dashboard";
}


<div style="text-align: center;">
    <p style="font-size: 100px;">@DateTime.Now.ToString("dddd")</p>
    <p style="font-size: 35px;">¡Bienvenido, @User.Identity.Name! lleve el control de su minihospital aqui</p>
    
</div>

<div id="clock" style="position: absolute; bottom: 10px; right: 10px; font-size: 25px;"></div>




    @section scripts {
        <script>

            function updateClock() {
                var now = new Date();
                var hours = now.getHours();
                var minutes = now.getMinutes();
                var seconds = now.getSeconds();

                minutes = minutes < 10 ? '0' + minutes : minutes;
                seconds = seconds < 10 ? '0' + seconds : seconds;

                var timeString = hours + ':' + minutes + ':' + seconds;

                document.getElementById('clock').textContent = timeString;
            }


            setInterval(updateClock, 1000);
        </script>
    }
