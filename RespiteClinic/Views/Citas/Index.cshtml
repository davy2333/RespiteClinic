@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


@model IEnumerable<RespiteClinic.Models.DTO.Citas>

@{
    ViewBag.Title = "Citas";
}
<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.cs">
</head>

<body>
<h2>Citas</h2>

<p>
    @Html.ActionLink("Create New", "Create" , null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table table-striped table-hover table-borderless">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.id_personal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_historial_clinico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>

        <th>
            accion
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.id_personal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_historial_clinico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>

            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-outline-secondary" })
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

    <script>src = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"</script>
</table>
</body>