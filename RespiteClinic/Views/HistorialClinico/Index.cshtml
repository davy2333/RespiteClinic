@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
@model IEnumerable<RespiteClinic.Models.DTO.Historial_clinico>

@{
    ViewBag.Title = "Index";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.cs">
</head>
<h2>Historial Clinico</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table table-striped table-hover table-borderless">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.historial_enfermedades)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.motivo_consulta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.diagnostico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tratamiento)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_paciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.historial_enfermedades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.motivo_consulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diagnostico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tratamiento)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-outline-secondary" })
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-outline-danger" })

            </td>
        </tr>
    }

</table>
