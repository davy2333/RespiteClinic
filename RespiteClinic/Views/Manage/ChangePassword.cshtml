@{
    Layout = "~/Views/Shared/layoutUsuario.cshtml";
}
@model RespiteClinic.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
}
<main aria-labelledby="title">
    <div class="form-container">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2 id="title" class="text-center">@ViewBag.Title.</h2> <!-- Centrar el título aquí -->
            <h4 class="text-center">Formulario para cambiar contraseña</h4> <!-- Centrar el subtítulo aquí -->
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="offset-md-2 col-md-10">
                    <input type="submit" value="Cambiar contraseña" class="btn btn-outline-primary" />
                </div>
            </div>
        }
    </div>
</main>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .form-container {
        text-align: center;
        background-color: #9cd2d3;
        padding: 50px;
        border-radius: 10px;
        margin: 0 auto;
        width: 40%;
    }
</style>
